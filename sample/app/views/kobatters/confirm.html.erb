<div class="wrapper clearfix">
  <aside class="side_menu">
    <p class="banner">
      <img src="/assets/tree_animals.png">
    </p>
    <script>
    $(function() {
      $('.banner img').fadeIn(2000)
    });
    </script>

    <nav>
      <ul>
        <li>
          <img src="/assets/panda1.png" class="animal_image">
          <%= link_to 'トップページ', kobatters_home_path %>
        </li>
        <li>
          <img src="/assets/lion.png" class="animal_image">
          <%= link_to 'つぶやき一覧', kobatters_path %>
        </li>
        <li>
          <img src="/assets/panda_coughing.png" class="animal_image">
          <%= link_to 'つぶやく', new_kobatter_path %>
        </li>
      </ul>
    </nav>
  </aside>
  <article class="content">
    <div class="article_main">
      <h1>以下の内容でつぶやきますか？</h1>
        <div class="article_details">
        <%= form_with(model: @kobatter, local: true) do |form| %>
          <%= form.hidden_field :content %>
          <p><%= @kobatter.content %></p>
          <%= form.submit  "登録する" %>
          <%= form.submit "戻る", name: 'back' %>
        <% end %>
        </div>
    </div>
  </article>
</div>
